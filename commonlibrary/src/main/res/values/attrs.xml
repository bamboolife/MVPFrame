<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CountDownCircleView">
        <attr name="circle_bg_color" format="color" />
        <attr name="circle_pb_color" format="color" />
        <attr name="circle_pb_width" format="dimension" />
        <attr name="circle_text_color" format="color" />
        <attr name="circle_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MainNavigateTabBar">
        <attr name="navigateTabTextColor" format="color|reference"/>
        <attr name="navigateTabSelectedTextColor" format="color|reference"/>
        <attr name="containerId" format="integer|reference"/>
        <attr name="navigateTabTextSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="XEditText">
        <attr name="x_separator" format="string"/>
        <attr name="x_disableClear" format="boolean"/>
        <attr name="x_clearDrawable" format="reference"/>
        <attr name="x_showPwdDrawable" format="reference"/>
        <attr name="x_hidePwdDrawable" format="reference"/>
        <attr name="x_disableEmoji" format="boolean"/>
        <attr name="x_disableTogglePwdDrawable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BezierMoveView">
        <attr name="bmvString" format="string" />
        <attr name="bmvDimension" format="dimension" />
        <attr name="bmvColor" format="color" />
        <attr name="bmvDrawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="BezierWaveView">
        <attr name="bwvString" format="string" />
        <attr name="bwvWaveHeight" format="dimension" />
        <attr name="bwvColor" format="color" />
        <attr name="bwvDrawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension"/>
        <attr name="sb_shadow_offset" format="reference|dimension"/>
        <attr name="sb_shadow_color" format="reference|color"/>
        <attr name="sb_uncheck_color" format="reference|color"/>
        <attr name="sb_checked_color" format="reference|color"/>

        <attr name="sb_border_width" format="reference|dimension"/>
        <attr name="sb_checkline_color" format="reference|color"/>
        <attr name="sb_checkline_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_color" format="reference|color"/>
        <attr name="sb_uncheckcircle_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="sb_checked" format="reference|boolean"/>
        <attr name="sb_shadow_effect" format="reference|boolean"/>
        <attr name="sb_effect_duration" format="reference|integer"/>
        <attr name="sb_button_color" format="reference|color"/>
        <attr name="sb_show_indicator" format="reference|boolean"/>
        <attr name="sb_background" format="reference|color"/>
        <attr name="sb_enable_effect" format="reference|boolean"/>
    </declare-styleable>

    <!-- 申请进度的自定义view-->
    <declare-styleable name="AuditProgressView">
        <!--当前步骤是否完成 -->
        <attr name="apv_isCurrentComplete" format="boolean" />
        <!--下一个步骤是否完成 -->
        <attr name="apv_isNextComplete" format="boolean" />
        <!--是不是第一个步骤 -->
        <attr name="apv_isFirstStep" format="boolean" />
        <!--是不是最后一个步骤 -->
        <attr name="apv_isLastStep" format="boolean" />
        <!--共有几个步骤 -->
        <attr name="apv_stepCount" format="integer" />
        <!--步骤提示 -->
        <attr name="apv_text" format="string|reference" />
    </declare-styleable>

    <attr name="pressedAlpha" format="float"/>
    <attr name="disabledAlpha" format="float"/>

    <declare-styleable name="TitleBarView">
        <!--是否沉浸式状态栏,默认true-->
        <attr name="title_immersible" format="boolean"/>
        <!--内边距(距左右),默认12dp;ToolBar16dp-->
        <attr name="title_outPadding" format="dimension"/>
        <!--添加子View 内边距,默认1dp-->
        <attr name="title_actionPadding" format="dimension"/>
        <!--标题Layout左对齐时;中间Layout-左边距默认2dp;-->
        <attr name="title_centerLayoutPadding" format="dimension"/>
        <!--标题文字是否左对齐,默认false即:标题居中-->
        <attr name="title_centerGravityLeft" format="boolean"/>
        <!--标题Layout左对齐时;中间Layout-左边距默认24dp;ToolBar32dp-->
        <attr name="title_centerGravityLeftPadding" format="dimension"/>
        <!--是否浅色状态栏(黑色文字及图标)-->
        <attr name="title_statusBarLightMode" format="boolean"/>
        <!--View 按下透明度-->
        <attr name="title_viewPressedAlpha" format="float"/>

        <!--状态栏背景-->
        <attr name="title_statusBackground" format="color|reference"/>
        <!--下划线背景-->
        <attr name="title_dividerBackground" format="color|reference"/>
        <!--下划线高度,默认0.5dp-->
        <attr name="title_dividerHeight" format="dimension"/>
        <!--下划线是否可见,默认true-->
        <attr name="title_dividerVisible" format="boolean"/>

        <!--左边文字,支持CharSequence及String资源-->
        <attr name="title_leftText" format="string"/>
        <!--左边文字大小,默认14dp-->
        <attr name="title_leftTextSize" format="dimension"/>
        <!--左边文字颜色,默认Color.BLACK-->
        <attr name="title_leftTextColor" format="color|reference"/>
        <!--左边文字背景-->
        <attr name="title_leftTextBackground" format="color|reference"/>
        <!--左边文字drawable资源-->
        <attr name="title_leftTextDrawable" format="reference"/>
        <!--左边文字drawable资源宽度,默认drawable原始宽度-->
        <attr name="title_leftTextDrawableWidth" format="dimension"/>
        <!--左边文字drawable资源高度,默认drawable原始高度-->
        <attr name="title_leftTextDrawableHeight" format="dimension"/>
        <!--左边文字与drawable资源边距,默认1dp-->
        <attr name="title_leftTextDrawablePadding" format="dimension"/>

        <!--主标题文字,支持CharSequence及String资源-->
        <attr name="title_titleMainText" format="string"/>
        <!--主标题文字大小,默认18dp-->
        <attr name="title_titleMainTextSize" format="dimension"/>
        <!--主标题文字颜色,默认Color.BLACK-->
        <attr name="title_titleMainTextColor" format="color|reference"/>
        <!--主标题文字背景-->
        <attr name="title_titleMainTextBackground" format="color|reference"/>
        <!--主标题文字是否粗体,默认false-->
        <attr name="title_titleMainTextFakeBold" format="boolean"/>
        <!--主标题文字是否跑马灯,默认false-->
        <attr name="title_titleMainTextMarquee" format="boolean"/>

        <!--副标题文字,支持CharSequence及String资源-->
        <attr name="title_titleSubText" format="string"/>
        <!--副标题文字大小,默认12dp-->
        <attr name="title_titleSubTextSize" format="dimension"/>
        <!--副标题文字颜色,默认Color.BLACK-->
        <attr name="title_titleSubTextColor" format="color|reference"/>
        <!--副标题文字背景-->
        <attr name="title_titleSubTextBackground" format="color|reference"/>
        <!--副标题文字是否粗体,默认false-->
        <attr name="title_titleSubTextFakeBold" format="boolean"/>
        <!--副标题文字是否跑马灯,默认false-->
        <attr name="title_titleSubTextMarquee" format="boolean"/>

        <!--右边边文字,支持CharSequence及String资源-->
        <attr name="title_rightText" format="string"/>
        <!--右边文字大小,默认14dp-->
        <attr name="title_rightTextSize" format="dimension"/>
        <!--右边文字颜色,默认Color.BLACK-->
        <attr name="title_rightTextColor" format="color|reference"/>
        <!--右边文字背景-->
        <attr name="title_rightTextBackground" format="color|reference"/>
        <!--右边文字drawable资源-->
        <attr name="title_rightTextDrawable" format="reference"/>
        <!--右边文字drawable资源宽度,默认drawable原始宽度-->
        <attr name="title_rightTextDrawableWidth" format="dimension"/>
        <!--右边文字drawable资源高度,默认drawable原始高度-->
        <attr name="title_rightTextDrawableHeight" format="dimension"/>
        <!--右边文字与drawable资源边距,默认1dp-->
        <attr name="title_rightTextDrawablePadding" format="dimension"/>

        <!--添加TextView文字大小,默认14dp-->
        <attr name="title_actionTextSize" format="dimension"/>
        <!--添加TextView文字颜色,默认Color.BLACK-->
        <attr name="title_actionTextColor" format="color|reference"/>
        <!--添加TextView文字背景-->
        <attr name="title_actionTextBackground" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="MenuItem">
        <attr name="menu_title" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <!--底部导航菜单-->
    <declare-styleable name="NavMenuLayout">
        <!--菜单个数-->
        <attr name="menuCount" format="integer" />
    </declare-styleable>
    <declare-styleable name="ShadowContainer">
        <attr name="sc_shadowColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FlutteringLayout">
        <attr name="enter_duration" format="integer"/>
        <attr name="duration" format="integer"/>
        <attr name="scale" format="float"/>
        <attr name="same_size" format="boolean"/>
    </declare-styleable>
</resources>